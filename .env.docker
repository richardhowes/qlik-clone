# Docker Environment Configuration
# Copy these to your .env file when using Docker

# PostgreSQL Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=qlik_clone
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=redis
CACHE_STORE=redis
SESSION_DRIVER=redis

# Analytics Database (DuckDB)
ANALYTICS_DB_CONNECTION=duckdb
ANALYTICS_DB_PATH=storage/analytics/warehouse.duckdb

# Airbyte Configuration (when ready)
AIRBYTE_API_URL=http://localhost:8001
AIRBYTE_API_TOKEN=

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# File Storage
FILESYSTEM_DISK=local
MAX_UPLOAD_SIZE=10M

# MinIO Configuration (S3-compatible storage)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=uploads
AWS_ENDPOINT=http://localhost:9000
AWS_USE_PATH_STYLE_ENDPOINT=true